
<div class="row">
<p id="notice"><%= notice %></p>
<% @posts.each do |post| %>
<div class="col-md-4">
    <div class="thumbnail">
      
        <%= image_tag post.banner_image, class: 'img-rounded'  %>
        <div class="caption">
         <h3><%= link_to post.title.capitalize, show_path(post) %></h3>
         <small>Published on: <%= post.created_at.strftime("%-b %-d, %Y") %> </small>
        </div>
      
    </div>
  </div>
  <% end %>
  </div>
